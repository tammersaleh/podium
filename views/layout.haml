!!!
%html
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-type" }/
    = stylesheet_link_tag '/internal/stylesheets/slides.css'
    = stylesheet_link_tag '/internal/stylesheets/code.css'
    = stylesheet_link_tag '/stylesheets/local.css'

    = javascript_script_tag '/internal/javascripts/jquery-1.4.1.js'
    = javascript_script_tag '/internal/javascripts/jquery-ui-1.8.js'
    = javascript_script_tag '/internal/javascripts/slides.js'
    = javascript_script_tag '/internal/javascripts/code_highlighter/base.js'
    = javascript_script_tag '/internal/javascripts/code_highlighter/css.js'
    = javascript_script_tag '/internal/javascripts/code_highlighter/html.js'
    = javascript_script_tag '/internal/javascripts/code_highlighter/javascript.js'
    = javascript_script_tag '/internal/javascripts/code_highlighter/ruby.js'
    = javascript_script_tag '/javascripts/local.js'
    
  %body
    #help
      %table
        %tr
          %th ?
          %td Toggle this help menu
        %tr
          %th c
          %td Toggle slide thumbnails
        %tr
          %th s
          %td Toggle the presentation sections
        %tr
          %th esc
          %td Return to the presentation
    #slides
      = yield


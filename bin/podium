#!/usr/bin/env ruby

require "rubygems"
require "podium"

command = ARGV.shift

case command
when "new":   
  Podium::Commands::New.new(*ARGV)
  Podium::Commands::Build.new(File.join(ARGV.first, "index.html.haml"))
when "build": 
  Podium::Commands::Build.new(*ARGV)
else
  raise "Unrecognized command: #{command}."
end
